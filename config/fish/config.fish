# Colour aliases.
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# some more aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ta='tmux attach'

alias bashrc='source ~/.bashrc'

alias gs='git status'
alias gl='git log'
alias gd='git diff'
alias gf='git fetch'
alias gp='git pull'

alias vir='vim -M'

alias rsync='rsync --progress'
