[core]
    editor = vim
    autocrlf = input
[user]
    name = Stuart Taylor
    email = stuartraetaylor@users.noreply.github.com
[merge]
    tool = vimdiff
[alias]
    co = !git checkout
    cm = !git commit
    amend = !git commit --amend
    push-new = !git push -u origin $(git rev-parse --abbrev-ref HEAD)
    purge = !git branch -D $1 && git push origin --delete $1
[log]
    date = iso
[pull]
    rebase = true
[init]
	defaultBranch = master
